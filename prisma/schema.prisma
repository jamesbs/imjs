generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id         Int     @id @default(autoincrement())
  name       String
  identities Identity[]
}

model Identity {
  id         Int    @id @default(autoincrement())
  type       String
  identifier String
  account    Account   @relation(fields: [accountId], references: [id])
  accountId  Int
}